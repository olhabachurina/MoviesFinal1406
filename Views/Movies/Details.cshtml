@model MoviesFinal1406.Models.Movie

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container">
        <h1 class="styled-title">@Model.Title</h1>
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.PosterPath" class="movie-poster" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <p><strong>Year:</strong> @Model.Year</p>
                <p><strong>Genre:</strong> @Model.Genre</p>
                <p><strong>Director:</strong> @Model.Director</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>