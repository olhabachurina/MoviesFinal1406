@model MoviesFinal1406.Models.Movie

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Confirmation</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container mt-5 pt-5">
        <h1 class="styled-title">Delete Confirmation</h1>
        <div class="alert alert-danger">
            <h4 class="alert-heading">Are you sure you want to delete this movie?</h4>
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Director:</strong> @Model.Director</p>
            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Year:</strong> @Model.Year</p>
            <p><strong>Description:</strong> @Model.Description</p>
        </div>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
